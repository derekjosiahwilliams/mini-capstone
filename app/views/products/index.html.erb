<h1>All Dragons</h1>
<% @products.each_slice(3) do |three_products| %>
  <div class="row">
      <% three_products.each do |product| %>
       <div class="col-md-4">
         <div class="well">  
          <h2><a href="/dragons/<%= product.id %>"><%= product.name %></a></h2>
          <p><b>Price:</b> <%= number_to_currency(product.price) %></p>
          <p><b>Element:</b> <%= product.element %></p>
          <p><b>Description:</b> <%= product.description %></p>
          <img src= "<%= product.image %>">
        </div>
      </div>
    <% end %>
  <% end %>
</div>