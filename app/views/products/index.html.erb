<h1>All Dragons</h1>
<% @products.each_slice(3) do |three_products| %>
  <div class="row">
      <% three_products.each do |product| %>
       <div class="col-md-4">
         <div class="well">  
          <h2><a href="/dragons/<%= product.id %>"><%= product.name %></a></h2>
          <p><font color="black"><b>Price:</b> <%= number_to_currency(product.price) %></font></p>
          <p><font color="black"><b>Element:</b> <%= product.element %></font></p>
          <p><font color="black"><b>Description:</b> <%= product.description %></font></p>
          <img src= "<%= product.images.first.url %>">
        </div>
      </div>
    <% end %>
  <% end %>
</div>